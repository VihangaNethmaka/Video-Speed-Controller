{
    "manifest_version": 3,
    "name": "Quick Video Speed Controller",
    "version": "1.0.1",
    "description": "Control video playback speed globally using keyboard shortcuts.",
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "action": {
        "default_title": "Quick Speed Controller",
        "default_popup": "popup.html",
        "default_icon": "assets/icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "permissions": [
        "activeTab",
        "storage" 
    ],
    "background": {
        "service_worker": "background.js"
    }

}
